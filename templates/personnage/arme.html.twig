{% extends 'base.html.twig' %}

{% block titre%} Mon épée  {% endblock %}

{% block body %}

<div class="row">
    <div class="col-2">
        <img src="{{asset('images/armes/' ~ arme.nom|replace({'é':'e'}) ~ '.png')}}" alt="">
    </div>
    <div class="col">
        <p> {{arme.nom}} </p>
        <p> {{arme.description}} </p>
        <p> Degat : {{arme.degat}} </p>
    </div>
</div>
    
{% endblock %}